<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top navbar-color">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle navbar-text-color" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="~/Home/Index">
                    <img alt="Brand" src="~/Content/Photos/LearningDynamicsLogo.jpg"  height="30" style="padding:3px,0px,0px,15px">
                </a>
            </div>
            <div class="navbar-collapse collapse">
                <button class="btn btn-primary" type="button" style="padding:5px,0px,0px,15px;margin:8px;font-family:Bahnschrift;font-size:larger;font-weight:500;" onclick="location.href='/Home/Index'">
                    Home
                </button>
                <button class="btn btn-primary" type="button" style="padding:5px,0px,0px,15px;margin:8px;font-family:Bahnschrift;font-size:larger;font-weight:500;" onclick="location.href='/Home/About'">
                    About
                </button>
                <button class="btn btn-primary" type="button" style="padding:5px,0px,0px,15px;margin:8px;font-family:Bahnschrift;font-size:larger;font-weight:500;" onclick="location.href='/Contact/Index'">
                    Enroll
                </button>
                <div class="dropdown">
                    <button class=" btn btn-primary dropdown-toggle" type="button" data-toggle="dropdown" style="padding:5px,0px,0px,15px;margin:8px;font-family:Bahnschrift;font-size:larger;font-weight:500;">School Details</button>
                    <div class="dropdown-content">
                        <a style="font-family:Bahnschrift;font-size:larger;font-weight:500" href="@Url.Action("Details", "SchoolsDescriptions", new { id = 1 })">Lehi</a>
                        <a style="font-family:Bahnschrift;font-size:larger;font-weight:500" href="@Url.Action("Details", "SchoolsDescriptions", new { id = 2 })">Riverton</a>
                        <a style="font-family:Bahnschrift;font-size:larger;font-weight:500" href="@Url.Action("Details", "SchoolsDescriptions", new { id = 3 })">Gilbert</a>
                    </div>
                </div>
                <button class="btn btn-primary" type="button" style="padding:5px,0px,0px,15px;margin:8px;font-family:Bahnschrift;font-size:larger;font-weight:500;" onclick="location.href='/SchoolQuestions/Index'">
                    FAQs
                </button>
                <!-- Anchored to the right-side of the navbar -->
                <div class="pull-right nav navbar-nav" style="font-family:Bahnschrift; font-weight:500">
                    <button class="btn btn-primary" type="button" style="padding:0px,0px,0px,15px;margin:8px;font-family:Bahnschrift;font-size:larger;font-weight:500;" onclick="location.href='/Home/Login'">
                        <!-- Login and Register button -->
                        Login/Register
                    </button>
                </div>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
